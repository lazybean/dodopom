[
{
  "settings": [
    "master" 
    ],
    "yui": {
      "config":{
        "gallery": "gallery-2013.05.15-21-12",
        "groups": {
          "leaflet": {
            "base": "http://cdn.leafletjs.com/leaflet-0.5/",
            "modules": {
              "leaflet": {
                "path": "leaflet.js"   
              }
            }
          }
        }
      }
    },
    "appPort": "8666",
    "specs": {

      "guestForm": {
        "type": "guestForm",
        "config": {
          "deploy": true,
          "mongo": {
            "url": "mongodb://localhost/weddingGuests",
            "modelName": "Guests",
            "schema": {
              "name":  { "type": "String", "required": true },  
              "firstName": "String",
              "email": "String",
              "address": "String",
              "veget": "Boolean",
              "needHotel": "Boolean",
              "hotelStart": {"type": "Date"},
              "hotelEnd": {"type": "Date"}
            }
          }
        }
      },
      "frame": {
        "type": "body",
        "config": {
          "title": "PommE+Dodo",
          "deploy": true,
          "assets": {
            "top": {
              "css": [
                "http://yui.yahooapis.com/gallery-2013.03.27-22-06/build/gallerycss-cssform/gallerycss-cssform-min.css",
              "http://yui.yahooapis.com/pure/0.1.0/pure-min.css",
              "./index.css",
              "/static/wedding/assets/skin-happyPom.css"
                ]
            }
          },
          "child": {
            "base": "guestForm"
          }
        }
      },

      "mainFrame": {
        "base": "frame",
        "type": "HTMLFrameMojit",
        "config": {
          "assets": {
            "top": {
              "css": [
                "http://yui.yahooapis.com/gallery-2013.03.27-22-06/build/gallerycss-cssform/gallerycss-cssform-min.css",
              "http://yui.yahooapis.com/pure/0.1.0/pure-min.css"
                ]
            }
          },
          "child": {
            "type": "weddInfo",
            "config": {
              "children": {
                "guest": {
                  "base": "guestForm",
                  "action": "updateForm"
                },
                "map": {
                  "type": "leafLetMojit",
                  "deploy": "true"
                }
              }
            }
          }
        }
      } 
    }
},
{
  "settings": [ "environment:development" ],
  "staticHandling": {
    "forceUpdate": true
  }
}]
