[
{
  "settings": [
    "master" 
    ],
    "yui": {
      "config":{
        "gallery": "gallery-2013.05.15-21-12"
      }
    },
    "appPort": "8666",
    "specs": {

          "guestForm": {
            "type": "guestForm",
            "config": {
              "deploy": true,
              "mongo": {
                "url": "mongodb://localhost/weddingGuests",
                "modelName": "Guests",
                "schema": {
                  "name":  { "type": "String", "required": true },  
                  "firstName": "String",
                  "email": "String",
                  "address": "String",
                  "veget": "Boolean",
                  "needHotel": "Boolean",
                  "hotelStart": {"type": "Date"},
                  "hotelEnd": {"type": "Date"},
                  "lang": "String"
                }
              }
            }
          },
      "frame": {
        "type": "body",
        "config": {
          "title": "PommE+Dodo",
          "deploy": true,
          "assets": {
            "top": {
              "css": [
                "http://yui.yahooapis.com/gallery-2013.03.27-22-06/build/gallerycss-cssform/gallerycss-cssform-min.css",
              "http://yui.yahooapis.com/pure/0.1.0/pure-min.css",
              "./index.css",
              "/static/wedding/assets/skin-happyPom.css",
              "/static/wedding/assets/skin-azur.css"
                ]
            }
          },
          "child": {
            "base": "guestForm"
          }
        }
      },

      "mainFrame": {
        "base": "frame",
        "type": "HTMLFrameMojit",
        "config": {
          "child": {
            "type": "weddInfo",
            "config": {
              "children": {
                "guest": {
                  "base": "guestForm",
                  "action": "updateForm"
                }
              }
            }
          }
        }
      } 
    }
},
{
  "settings": [ "environment:development" ],
  "staticHandling": {
    "forceUpdate": true
  }
}]
